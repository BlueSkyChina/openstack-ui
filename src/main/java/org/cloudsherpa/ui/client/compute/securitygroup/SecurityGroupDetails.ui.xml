<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.details {
			width: 100%;
			table-layout: fixed;
		}
	</ui:style>
	<g:HTMLPanel>
		<table class="table table-stripped {style.details}">
			<tbody>
				<tr>
					<td>ID</td>
					<td>
						<g:Label ui:field="id" />
					</td>
				</tr>
				<tr>
					<td>Name</td>
					<td>
						<g:Label ui:field="name" />
					</td>
				</tr>
				<tr>
					<td>Description</td>
					<td>
						<g:Label ui:field="description" />
					</td>
				</tr>
			</tbody>
		</table>
		<h3>Security Group Rules</h3>
		<g:FlexTable ui:field="rules" styleName="table table-stripped" />
	</g:HTMLPanel>
</ui:UiBinder> 