<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.details {
			width: 100%;
			table-layout: fixed;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:HorizontalPanel styleName="{style.details}">
			<g:HTMLPanel>
				<table class="table table-stripped {style.details}">
					<tbody>
						<tr>
							<td>ID</td>
							<td>
								<g:Label ui:field="id" />
							</td>
						</tr>
						<tr>
							<td>Status</td>
							<td>
								<g:InlineLabel ui:field="status" />
							</td>
						</tr>
						<tr>
							<td>Config Drive</td>
							<td>
								<g:Label ui:field="configDrive" />
							</td>
						</tr>
						<tr>
							<td>Created</td>
							<td>
								<g:Label ui:field="created" />
							</td>
						</tr>
						<tr>
							<td>Updated</td>
							<td>
								<g:Label ui:field="updated" />
							</td>
						</tr>
						<tr>
							<td>Fault</td>
							<td>
								<g:Label ui:field="fault" />
							</td>
						</tr>

					</tbody>
				</table>
			</g:HTMLPanel>
			<g:HTMLPanel>
				<table class="table table-stripped {style.details}">
					<tbody>
						<tr>
							<td>Flavor</td>
							<td>
								<g:Label ui:field="flavor" />
							</td>
						</tr>
						<tr>
							<td>Host</td>
							<td>
								<g:Label ui:field="hostId" />
							</td>
						</tr>
						<tr>
							<td>Key Name</td>
							<td>
								<g:Label ui:field="keyName" />
							</td>
						</tr>
						<tr>
							<td>Progress</td>
							<td>
								<g:InlineLabel ui:field="progress" />
							</td>
						</tr>
						<tr>
							<td>Tenant ID</td>
							<td>
								<g:Label ui:field="tenantId" />
							</td>
						</tr>
						<tr>
							<td>User ID</td>
							<td>
								<g:Label ui:field="userId" />
							</td>
						</tr>
					</tbody>
				</table>
			</g:HTMLPanel>
		</g:HorizontalPanel>
		<g:HTMLPanel>
			<h3>Networking</h3>
			<table class="table table-stripped ">
				<tbody>
					<tr>
						<td>Access IPv4</td>
						<td>
							<g:Label ui:field="accessIPv4" />
						</td>
					</tr>
					<tr>
						<td>Access IPv6</td>
						<td>
							<g:Label ui:field="accessIPv6" />
						</td>
					</tr>
				</tbody>
			</table>
			<g:VerticalPanel ui:field="networks" width="100%"/>
			<h3>Metadata</h3>
			<g:FlexTable ui:field="metadata" styleName="table table-stripped" />
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 