<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.details {
			width: 100%;
			table-layout: fixed;
		}
	</ui:style>
	<g:HorizontalPanel styleName="{style.details}">
		<g:HTMLPanel>
			<table class="{style.details}">
				<tbody>
					<tr>
						<td>Status</td>
						<td>Running</td>
						<td>
							<g:Anchor ui:field="reboot">Reboot</g:Anchor>
							<g:Anchor ui:field="stop">Stop</g:Anchor>
							<g:Anchor ui:field="destroy">Destroy</g:Anchor>
						</td>
					</tr>
					<tr>
						<td>Uptime</td>
						<td colspan="2">Less than 1 hour / $0.02 this month</td>
					</tr>
					<tr>
						<td>Instance ID</td>
						<td colspan="2"><g:Label ui:field="id" /></td>
					</tr>
					<tr>
						<td>Hostname</td>
						<td colspan="2">0123456789abcdef</td>
					</tr>
				</tbody>
			</table>
		</g:HTMLPanel>
		<g:HTMLPanel>
			<table class="{style.details}">
				<tbody>
					<tr>
						<td>Uptime</td>
						<td colspan="2">Less than 1 hour / $0.02 this month</td>
					</tr>
					<tr>
						<td>Instance ID</td>
						<td colspan="2">0123456789abcdef</td>
					</tr>
					<tr>
						<td>Hostname</td>
						<td colspan="2">0123456789abcdef</td>
					</tr>
				</tbody>
			</table>
		</g:HTMLPanel>
	</g:HorizontalPanel>
</ui:UiBinder> 