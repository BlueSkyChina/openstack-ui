<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:cell="urn:import:com.google.gwt.user.cellview.client" xmlns:s="urn:import:org.cloudsherpa.ui.client.identity.service">
	<ui:style>
		.grey {
			background-color: #F1F1F1;
		}
	</ui:style>
	<g:SplitLayoutPanel>
		<g:north size="360">
			<g:HeaderPanel>
				<g:VerticalPanel width="100%">
					<g:HorizontalPanel width="100%">
						<g:cell width="50%">
							<g:FlowPanel>
								<g:Button ui:field="create" styleName="btn btn-primary"><i class="icon-plus icon-white"></i> Create</g:Button>
								<g:Button ui:field="delete" styleName="btn btn-danger"><i class="icon-minus icon-white"></i> Delete</g:Button>
								<g:Button ui:field="attach" styleName="btn"><i class="icon-plus"></i> Attach</g:Button>
								<g:Button ui:field="detach" styleName="btn"><i class="icon-minus"></i> Detach</g:Button>
							</g:FlowPanel>
						</g:cell>
						<g:cell width="50%" horizontalAlignment="right">
							<g:Button ui:field="refresh" styleName="btn btn-inverse"><i class="icon-refresh icon-white"></i> Refresh</g:Button>
						</g:cell>
					</g:HorizontalPanel>
				</g:VerticalPanel>
				<cell:DataGrid ui:field="grid" width="100%" height="100%" styleName="{style.grey}"/>
			</g:HeaderPanel>
		</g:north>
		<g:center>
			<g:TabLayoutPanel barHeight="30">
				<g:tab>
					<g:header>tab.1</g:header>
					<s:ServiceDetails ui:field="details" />
				</g:tab>
				<g:tab>
					<g:header>tab.2</g:header>
					<g:HTMLPanel>
						t2
					</g:HTMLPanel>
				</g:tab>
			</g:TabLayoutPanel>
		</g:center>
	</g:SplitLayoutPanel>
</ui:UiBinder> 