<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p="urn:import:org.openstack.portal.client">
	<ui:style>
		.page {
			margin: 10px;
		}
		
		.main {
			border: 8px solid #E7E7E7;
		}
		
		.nav {
			background-color: #F1F1F1;
			height: 100%;
		}
		
		.compute {
			margin: 10px;
		}
		
		.content {
			border: 4px solid #E7E7E7;
		}
		
		.m5 {
			margin: 5px;
		}
		
		.m10 {
			margin: 10px;
		}
		
		.top-inner {
			table-layout: fixed;
			width: 100%;
		}
		
		.tt {
			border-collapse: separate;
			border-spacing: 5px;
		}
		
		.w100 {
			width: 100%;
		}
	</ui:style>
	<g:DockLayoutPanel styleName="{style.page}">
		<g:north size="96">
			<g:SimplePanel styleName="{style.m10}">
				<g:HorizontalPanel styleName="{style.top-inner}">
					<g:cell width="50%">
						<g:HTMLPanel>
							<img src="img/os-logo.png" />
						</g:HTMLPanel>
					</g:cell>
					<g:cell width="50%" horizontalAlignment="RIGHT">
						<g:VerticalPanel styleName="{style.tt}">
							<g:HTMLPanel>
								<div style="text-align: right">
									<a href="/setup">Setup</a>
									<a href="/login">Login</a>
								</div>
							</g:HTMLPanel>
							<g:HTMLPanel>
								<a href="/portal.html">Portal</a>
								|
								<a href="/portal.html">Administration</a>
								|
								<g:ListBox ui:field="tenants" />
							</g:HTMLPanel>
						</g:VerticalPanel>
					</g:cell>
				</g:HorizontalPanel>
			</g:SimplePanel>
		</g:north>
		<g:south size="32">
			<g:HTMLPanel>
				FOOTER
			</g:HTMLPanel>
		</g:south>
		<g:center>
			<g:SplitLayoutPanel styleName="{style.main}">
				<g:west size="180">
					<g:HTMLPanel styleName="{style.nav}">
						<p:Navigation ui:field="nav" />
					</g:HTMLPanel>
				</g:west>
				<g:center>
					<g:SimpleLayoutPanel ui:field="main" />
				</g:center>
			</g:SplitLayoutPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 