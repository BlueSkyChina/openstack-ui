<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:org.openstack.ui.client.compute.common"
	xmlns:s="urn:import:org.openstack.ui.client.compute.server" xmlns:i="urn:import:org.openstack.ui.client.compute.image"
	xmlns:sg="urn:import:org.openstack.ui.client.compute.securitygroup" xmlns:kp="urn:import:org.openstack.ui.client.compute.keypair">
	<ui:style>
		.steps {
			margin: 0 auto;
			width: 96%;
			table-layout: fixed;
			cursor: pointer;
		}
		.cancel {
			float: left !important;
		}
	</ui:style>

	<g:HeaderPanel width="800px" height="600px">
		<g:HTMLPanel>
			<div class="modal-header" style="margin-bottom: 15px">
				<g:Anchor ui:field="close" styleName="close">Ã—</g:Anchor>
				<h3>Create Server Wizard</h3>
				<g:HorizontalPanel ui:field="steps" styleName="{style.steps}" />
			</div>
		</g:HTMLPanel>
		<g:DeckLayoutPanel ui:field="deck" height="100%">
			<g:HTMLPanel title="Image Selection">
				<i:ImagePicker ui:field="imageRef" />
			</g:HTMLPanel>
			<g:TabLayoutPanel title="Configuration" barHeight="30">
				<g:tab>
					<g:header>Configuration</g:header>
					<g:HTMLPanel>
						<table>
							<tbody>
								<tr>
									<td colspan="2">
										Name
									</td>
								</tr>
								<tr>
									<td colspan="2">
										<g:TextBox ui:field="name" />
									</td>
								</tr>
							</tbody>
							<tbody>
								<tr>
									<td colspan="2">
										Flavor
									</td>
								</tr>
								<tr>
									<td colspan="2">
										<c:FlavorPicker ui:field="flavorRef" />
									</td>
								</tr>
							</tbody>
							<tbody>
								<tr>
									<td>Min.</td>
									<td>Max.</td>
								</tr>
								<tr>
									<td>
										<g:IntegerBox ui:field="min" value="1" />
									</td>
									<td>
										<g:IntegerBox ui:field="max" value="1" />
									</td>
								</tr>
							</tbody>
						</table>
					</g:HTMLPanel>
				</g:tab>
				<g:tab>
					<g:header>Metadata</g:header>
					<c:MapMetadataEditor ui:field="metadata" />
				</g:tab>
				<g:tab>
					<g:header>Personality</g:header>
					<s:PersonalityEditor ui:field="personality" />
				</g:tab>
			</g:TabLayoutPanel>
			<g:HTMLPanel title="Key Pair">
				<table>
					<tbody>
						<tr>
							<td colspan="2">
								Key Pair
							</td>
						</tr>
						<tr>
							<td colspan="2">
								<c:KeyPairPicker ui:field="keyName" />
							</td>
						</tr>
					</tbody>
				</table>
				<kp:CreateKeyPairForm ui:field="createKeyPairForm" />
			</g:HTMLPanel>
			<g:HTMLPanel title="Security Groups">
				<table>
					<tbody>
						<tr>
							<td colspan="2">
								Security Groups
							</td>
						</tr>
						<tr>
							<td colspan="2">
								<c:SelectMultiple ui:field="securityGroups" />
							</td>
						</tr>
					</tbody>
				</table>
			</g:HTMLPanel>
		</g:DeckLayoutPanel>
		<g:HTMLPanel ui:field="footer" styleName="modal-footer">
			<g:Button ui:field="previous" styleName="btn">Previous</g:Button>
			<g:Button ui:field="next" styleName="btn">Next</g:Button>
			<g:Button ui:field="finish" styleName="btn">Finish</g:Button>
			<g:Button ui:field="cancel" styleName="btn {style.cancel}">Cancel</g:Button>
		</g:HTMLPanel>
	</g:HeaderPanel>
</ui:UiBinder> 