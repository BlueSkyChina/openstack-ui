<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		
	</ui:style>
	<g:HeaderPanel width="600px" height="450px">
		<g:HTMLPanel>
			<div class="modal-header" style="margin-bottom: 15px">
				<g:Anchor ui:field="close" styleName="close">Ã—</g:Anchor>
				<h3>Create Image</h3>
			</div>
		</g:HTMLPanel>
		<g:ResizeLayoutPanel height="100%">

			<g:FormPanel ui:field="form">
				<g:HTMLPanel>

					<table style="width:98%">
						<tbody>
							<tr>
								<td>Name</td>
							</tr>
							<tr>
								<td>
									<g:TextBox ui:field="name" />
								</td>
							</tr>
						</tbody>
						<tbody>
							<tr>
								<td>Disk Format</td>
							</tr>
							<tr>
								<td>
									<g:ListBox ui:field="diskFormat" />
								</td>
							</tr>
						</tbody>
						<tbody>
							<tr>
								<td>Container Format</td>
							</tr>
							<tr>
								<td>
									<g:ListBox ui:field="containerFormat" />
								</td>
							</tr>
						</tbody>
						<tbody>
							<tr>
								<td>Image File</td>
							</tr>
							<tr>
								<td>
									<g:FileUpload ui:field="file" />
								</td>
							</tr>
						</tbody>
						<tbody>
							<tr>
								<td>
									<g:Button ui:field="upload" />
								</td>
							</tr>
						</tbody>
					</table>
				</g:HTMLPanel>
			</g:FormPanel>
		</g:ResizeLayoutPanel>
		<g:HTMLPanel ui:field="footer" styleName="modal-footer">
			<g:Button ui:field="cancel" styleName="btn">Cancel</g:Button>
		</g:HTMLPanel>
	</g:HeaderPanel>
</ui:UiBinder> 